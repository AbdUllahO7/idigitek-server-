# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/secure-express-api
MONGODB_URI_TEST=mongodb://localhost:27017/secure-express-api-test

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-productio
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_PASSWORD_EXPIRATION=10m
JWT_VERIFY_EMAIL_EXPIRATION=1d

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 minutes
RATE_LIMIT_MAX=100                   # 100 requests per window

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs